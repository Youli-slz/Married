/*弹幕实现*/
.aon{
  height:62rpx;
  position: absolute;
  white-space:nowrap;/* 防止向下换行*/
  animation-timing-function: linear;
  max-width: 360rpx;
  animation-fill-mode: none;
  background-color: #fff;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  padding-left: 6rpx;
  padding-right: 30px;
  border-radius: 30rpx;
}
.aon_text{
