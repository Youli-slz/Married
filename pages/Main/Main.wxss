/* 轮播图样式 */
.box {
  height: 340rpx;
  z-index: 0;
  margin: 148rpx 0 0 0;
  width:100%;
  display: flex;
}
.box .club {
  height: 560rpx;
  width: 360rpx;
  position: relative;
  display: inline-block;
}
.club image {
  height: 560rpx;
  width: 360rpx;
}
 .box .club:nth-child(1) {
  transform: scale(1,1) translateX(0rpx);
  opacity: 0.5;
  z-index: 100;
}
.box .club:nth-child(2) {
  transform: scale(1.4,1.4) translateX(-120rpx);
  z-index: 1000;
}
.box .club:nth-child(3) {
  transform: scale(1,1) translateX(-328rpx);
  opacity: 0.5;
  z-index: 100;
}  

