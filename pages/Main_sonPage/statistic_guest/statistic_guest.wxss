} 
.swiper-tab-list{ 
  font-size: 28rpx; 
  /* margin: 30rpx 0; */
  display: inline-block; 
  width: 33%; 
  color: #8a8a8a; 
}
.line_top{
    border-left: 2rpx solid #e7e7e7;
    width: 1rpx;
    height: 40rpx;
}

