.attend,.pending,.absence{
    background-color: #fff;
    padding-left: 40rpx;
    padding-right: 30rpx;
    margin-bottom:2rpx;
}

.info{
    display: flex;
    padding-top: 20rpx;
    padding-bottom: 10rpx;
}
.info_desc{
    display: flex;
    align-items: center;
}
.info_img{
    display: flex;
    align-items: center;
    padding-right: 30rpx;
}
.info_img image{
    width: 100rpx;
    height: 100rpx;
}
.info_msg{
    display: flex;
    align-items: center;
    width: 100%;
}

.money_img{
    display: flex;
    align-items: center;
    color: #ff1c63;
}
.money_img image{
    width:30rpx;
    height: 30rpx;
}

.info_phone{
    font-size: 24rpx;
    color: #1e1e1e;
}

.info_words{
    color: #1e1e1e;
    font-size: 28rpx;
    padding-bottom: 20rpx;
}
.info_name, .info_num{
    padding-right:10rpx;
}

.guest_status{
    display: flex;
    align-items: center;
    width: 70%;
    justify-content: flex-end;
    position: absolute;
    color: #8a8a8a;
}
.guest_status image{
    width: 32rpx;
    height: 32rpx;
}
 
.img_down{
    display: flex;
    align-items: center;
}