<swiper current="{{currentTab}}" class="swiper-box" duration="300"  style="height:{{winHeight*0.9}}px" bindchange="bindChange">
  <swiper-item>
    <scroll-view scroll-y style="height:{{winHeight*0.9}}px" bindscrolltolower="lower">
      <view class="Card_list">
          <block wx:for="{{Card_list}}" wx:key="{{id}}">
              <picker bindchange="make_card" data-id="{{item.id}}" data-link="{{item.preview_link}}" value="{{index}}" range="{{methodType}}" range-key="name"><view class=""  >
                  <image src="{{item.cover_pic}}"></image>
              </view></picker>
          </block>
      </view>  
    </scroll-view>
  </swiper-item>
